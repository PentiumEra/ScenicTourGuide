<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/len_16">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:text="Error"
            android:textColor="@color/colorTxtSelected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/len_24"
            android:layout_height="@dimen/len_24"
            android:layout_gravity="right|center_vertical"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_delete2" />


    </FrameLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorTxtSelected"
        android:layout_gravity="bottom"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/len_16"
        android:text="登陆失败！"
        android:textColor="@color/red_900"
        android:textSize="@dimen/font_18" />

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/len_12"
        android:background="@drawable/sel_btn_bg_accent_44"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        app:gTouchColor="@color/white_alpha_48"
        app:gTouchCornerRadius="16dp"
        app:gTouchEffect="ripple" />
</LinearLayout>
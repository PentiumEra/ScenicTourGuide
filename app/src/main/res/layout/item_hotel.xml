<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/item_hotel_root"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_8"
        android:layout_marginRight="@dimen/len_8"
        android:layout_marginTop="@dimen/len_4"
        android:layout_marginBottom="@dimen/len_4"
        android:focusable="true"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_4">
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/item_hotel_list_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_156"
                android:src="@drawable/bg_src_tianjin" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_hotel_list_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_32"
                android:layout_below="@+id/item_hotel_list_img"
                android:background="@color/white_alpha_80"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_8"
                android:paddingBottom="@dimen/len_8"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="@dimen/font_18"
                android:textStyle="bold"
                tools:text="黄山" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_hotel_list_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_hotel_list_title"
                android:layout_marginStart="@dimen/len_8"
                android:layout_marginTop="@dimen/len_4"
                android:padding="@dimen/len_2"
                android:textColor="@color/colorTxtSelected"
                android:textStyle="bold"
                tools:text="未评级" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_hotel_list_star_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/item_hotel_list_grade"
                android:layout_alignParentEnd="true"
                android:paddingRight="@dimen/len_8"
                android:textSize="@dimen/font_16"
                android:text="经济型" />

            <ImageView
                android:id="@+id/qi"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/item_hotel_list_grade"
                android:layout_marginRight="@dimen/len_8"
                android:layout_toLeftOf="@+id/item_hotel_list_sta"
                android:src="@drawable/ic_leixing" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_hotel_list_grade"
                android:layout_marginTop="@dimen/len_4"
                android:background="@drawable/bg_imaginary" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_location"
                android:layout_width="@dimen/len_24"
                android:layout_height="@dimen/len_24"
                android:layout_below="@+id/line1"
                android:paddingLeft="@dimen/len_8"
                android:src="@drawable/ic_location_normal" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_hotel_list_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/len_24"
                android:layout_alignBottom="@+id/img_location"
                android:layout_toRightOf="@id/img_location"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/len_8"
                android:singleLine="true"
                tools:text="黄山" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
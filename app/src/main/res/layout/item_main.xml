<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16"
        android:paddingTop="@dimen/len_12"
        android:paddingBottom="@dimen/len_12">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_item_portrait"
            android:layout_width="@dimen/len_32"
            android:layout_height="@dimen/len_32" />
        <TextView
            android:id="@+id/main_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_item_portrait"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/len_4"/>
        <TextView
            android:id="@+id/main_item_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/text_color"
            android:layout_marginLeft="@dimen/len_4"/>
    </RelativeLayout>
    <TextView
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/main_item_title"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/len_16"
        android:textColor="@color/black"/>
    <TextView
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="content"
        android:id="@+id/main_item_content"
        android:layout_marginBottom="@dimen/len_12"
        android:textColor="@color/text_color"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_main_pic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="2019-04-23"
            android:textColor="@color/text_color"
            android:paddingRight="@dimen/len_16"
            android:paddingTop="@dimen/len_12"/>
    </FrameLayout>
</LinearLayout>